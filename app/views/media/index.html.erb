<h1>Listing media</h1>

<table>
  <thead>
    <tr>
      <th>Id media</th>
      <th>User</th>
      <th>Text</th>
      <th>Image url</th>
      <th>Approve state</th>
      <th>Show state</th>
      <th>Social net origin</th>
      <th>Media created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= medium.id_media %></td>
        <td><%= medium.user %></td>
        <td><%= medium.text %></td>
        <td><%= medium.image_url %></td>
        <td><%= medium.approve_state %></td>
        <td><%= medium.show_state %></td>
        <td><%= medium.social_net_origin %></td>
        <td><%= medium.media_created_at %></td>
        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

